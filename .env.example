# ===========================================
# Personal AI Employee - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ===========================================

# -------------------------------------------
# ENVIRONMENT SETTINGS
# -------------------------------------------
ENVIRONMENT=development
# Options: development, staging, production
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# -------------------------------------------
# AI/LLM API KEYS
# -------------------------------------------
# Anthropic Claude API (Primary)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-sonnet-4-20250514

# Alibaba Qwen/DashScope API (Alternative)
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# -------------------------------------------
# GMAIL INTEGRATION
# -------------------------------------------
# Get app password from: https://myaccount.google.com/apppasswords
GMAIL_ADDRESS=your_email@gmail.com
GMAIL_APP_PASSWORD=your_16_char_app_password
GMAIL_CHECK_INTERVAL=60

# IMAP Settings (for email watcher)
EMAIL_IMAP_SERVER=imap.gmail.com
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# -------------------------------------------
# LINKEDIN INTEGRATION
# -------------------------------------------
# Create app at: https://www.linkedin.com/developers/
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
# For local development use: http://localhost:8080/linkedin/callback
# For production use your actual domain
LINKEDIN_REDIRECT_URI=http://localhost:8080/linkedin/callback
LINKEDIN_PAGE_IDS=page_id_1,page_id_2
LINKEDIN_ENABLED=true

# -------------------------------------------
# TWITTER/X INTEGRATION
# -------------------------------------------
# Create app at: https://developer.twitter.com/
# Callback URI: http://localhost:8080/twitter/callback (add this in Twitter Developer Portal)
TWITTER_CALLBACK_URI=http://localhost:8080/twitter/callback
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# -------------------------------------------
# META (FACEBOOK/INSTAGRAM) INTEGRATION
# -------------------------------------------
# Create app at: https://developers.facebook.com/
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_ACCESS_TOKEN=your_meta_page_access_token
META_PAGE_ID=your_facebook_page_id
META_INSTAGRAM_ACCOUNT_ID=your_instagram_business_account_id

# -------------------------------------------
# ODOO ERP INTEGRATION
# -------------------------------------------
# Odoo Community self-hosted or cloud
ODOO_URL=http://localhost:8069
ODOO_DATABASE=your_odoo_database
ODOO_USERNAME=admin
ODOO_API_KEY=your_odoo_api_key
ODOO_APPROVAL_THRESHOLD=1000.0

# -------------------------------------------
# DATABASE SETTINGS
# -------------------------------------------
DATABASE_URL=sqlite:///./data/aiemployee.db
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Redis (for caching/queuing)
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# -------------------------------------------
# MCP SERVER PORTS
# -------------------------------------------
MCP_COMMUNICATION_PORT=8000
MCP_BROWSER_PORT=8001
MCP_SCHEDULING_PORT=8002

# MCP Server URLs (for clients)
COMMUNICATION_MCP_URL=http://localhost:8000
COMMUNICATION_MCP_TIMEOUT=30
BROWSER_MCP_URL=http://localhost:8001
BROWSER_MCP_TIMEOUT=60
SCHEDULING_MCP_URL=http://localhost:8002
SCHEDULING_MCP_TIMEOUT=30

# -------------------------------------------
# API SERVER SETTINGS
# -------------------------------------------
API_HOST=0.0.0.0
API_PORT=8080
ALLOWED_ORIGINS=*
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# -------------------------------------------
# MONITORING & METRICS
# -------------------------------------------
METRICS_PORT=9090

# -------------------------------------------
# EMAIL NOTIFICATIONS (Alerts)
# -------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL_FROM=alerts@ai-employee.local
NOTIFICATION_EMAIL_TO=admin@example.com,team@example.com

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# -------------------------------------------
# FILE PATHS
# -------------------------------------------
VAULT_DIR=./vault
LOGS_DIR=./logs
AUDITS_DIR=./audits
DATA_DIR=./data
WATCHED_FOLDER_PATH=./watched_folder

# -------------------------------------------
# SCHEDULING
# -------------------------------------------
SCHEDULE_INTERVAL_MINUTES=5

# -------------------------------------------
# WHATSAPP (Playwright Session)
# -------------------------------------------
WHATSAPP_SESSION_PATH=./whatsapp_session

# -------------------------------------------
# SECURITY SETTINGS
# -------------------------------------------
# Development mode disables real external actions
DEV_MODE=true
DRY_RUN=true

# Rate limits (actions per hour)
MAX_EMAILS_PER_HOUR=10
MAX_PAYMENTS_PER_HOUR=3
MAX_SOCIAL_POSTS_PER_HOUR=5

# Approval thresholds
PAYMENT_APPROVAL_THRESHOLD=100.00
INVOICE_APPROVAL_THRESHOLD=1000.00

# -------------------------------------------
# SLACK INTEGRATION
# -------------------------------------------
# Create app at: https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_APP_TOKEN=xapp-your-slack-app-token
SLACK_DEFAULT_CHANNEL=#general
SLACK_SIGNING_SECRET=your_signing_secret

# -------------------------------------------
# GOOGLE CALENDAR INTEGRATION
# -------------------------------------------
# Uses same Google Cloud Project as Gmail
GOOGLE_CALENDAR_CREDENTIALS=./credentials.json
GOOGLE_CALENDAR_TOKEN=./calendar_token.json
DEFAULT_CALENDAR_ID=primary

# -------------------------------------------
# A2A AGENT-TO-AGENT MESSAGING
# -------------------------------------------
# Agent role: cloud or local
A2A_AGENT_ROLE=local
A2A_REDIS_URL=redis://localhost:6379/1
A2A_VAULT_SYNC_METHOD=git
# Options: git, syncthing, manual
A2A_HEARTBEAT_INTERVAL=30

# -------------------------------------------
# BROWSER/PAYMENT MCP
# -------------------------------------------
PAYMENT_HEADLESS=true
PAYMENT_SCREENSHOT_DIR=./vault/Logs/payments/screenshots
PAYMENT_MAX_PER_HOUR=3
PAYMENT_APPROVAL_EXPIRY_HOURS=24
# Allowed payment portal domains (comma-separated)
PAYMENT_ALLOWED_DOMAINS=bank.example.com,paypal.com

# -------------------------------------------
# NEW MCP SERVER PORTS
# -------------------------------------------
MCP_CALENDAR_PORT=8003
MCP_SLACK_PORT=8004
MCP_PAYMENT_PORT=8005
MCP_A2A_PORT=8006

# MCP Server URLs
CALENDAR_MCP_URL=http://localhost:8003
SLACK_MCP_URL=http://localhost:8004
PAYMENT_MCP_URL=http://localhost:8005
A2A_MCP_URL=http://localhost:8006

# -------------------------------------------
# FINANCE WATCHER
# -------------------------------------------
FINANCE_CSV_WATCH_DIR=./vault/Accounting/imports
FINANCE_ALERT_THRESHOLD=500.00
FINANCE_POLL_INTERVAL=300
